<% provide(:title, 'All users') %>
<h1>All users</h1>

<%= will_paginate %>

<div class="table-responsive">
  <table class="table">
    <thead>
      <td>Avatar</td>
      <td>Username</td>
      <td>Edit</td>
      <td>Delelte</td>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= gravatar_for user, size: 50 %></td>
          <td><%= link_to user.username, admin_user_path(user.id) %> </td>
          <td><%= link_to "Edit", edit_admin_user_path(user.id) , class: "btn btn-success" %></td>
          <td><%= link_to "Delete", admin_user_path(user.id), method: :delete,data: {confirm: "You sure?"} , class: "btn btn-warning" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>