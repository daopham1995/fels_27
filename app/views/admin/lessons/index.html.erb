<h1>All lessons</h1>

<div>
  <%= link_to "New lesson", new_admin_lesson_path, class: "btn btn-lg btn-primary" %>
</div>

<div class="table-responsive">
  <table class="table">  
    <thead>
      <td>Lesson Name</td>
      <td>Description</td>
      <td>Category</td>
      <td></td>
    </thead>
    <% @lessons.each do |lesson| %>
      <tr>
        <td><%= lesson.name %></td>
        <td><%= lesson.description %></td>
        <td><%= lesson.category.try(:cat_name) %></td>
        <td><%= link_to "show", admin_lesson_path(lesson.id) ,class: "btn btn-success" %></td>
      </tr>  
    <% end %>
  </table>
</div>

