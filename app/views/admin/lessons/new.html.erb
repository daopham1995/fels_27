<h1>New lesson</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for([:admin, @lesson]) do |f| %>

      <%= f.label :cat_name ,"Category" %><br/> 
      <%= f.collection_select(:category_id, Category.all, :id, :cat_name) %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control' %>

      <%= f.submit "Create lesson", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>