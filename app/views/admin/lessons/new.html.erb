<h1>New lesson</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for([:admin, @lesson]) do |f| %>
      <%= render "shared/error_messages", obj: f.object %>
      
      <%= f.label :category_id %>
      <%= f.select(:category_id, @categories.collect {|category| [category.cat_name, category.id]}, 
        {include_blank: true}) %>
      
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.submit "Create lesson", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>